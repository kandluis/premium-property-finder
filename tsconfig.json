{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "es5",  
    "module": "esnext",
    "lib": [
        "ESNext",
        "DOM"
    ],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react", 
    "sourceMap": true, 
    "strict": true,                          
    "moduleResolution": "node",           
    "baseUrl": "./src",                      
    "paths": {
        "~/*": [ "./*" ]
    },                          
    "typeRoots": [
        "node_modules/@types"
    ],                      
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "downlevelIteration": true,               
  },
  "include": [
    "src/**/*"
  ]
}
