{
  "extends": "@tsconfig/node12/tsconfig.json",
  "parserOptions": {
    "allowAsStatement": true
  },
  "strict": true,
  "baseUrl": "./" /* Base directory to resolve non-absolute module names. */,
  "paths": {
    "*": ["*", "./types/*"]
  },
  "forceConsistentCasingInFileNames": true,
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "outDir": "dist/",
    "moduleResolution": "node",
    "skipLibCheck": true,
  },                
  "include": ["."],
  "typeRoots": [
    "./types",
    "./node_modules/@types"
  ]
}
